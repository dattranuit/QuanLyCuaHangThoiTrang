@model QuanLyCuaHangThoiTrang.Model.PhieuNhapKho

@{
    ViewBag.Title = "CHỈNH SỬA PHIẾU NHẬP KHO";
    ViewBag.SubTitle = "Tùy chỉnh các trường thông tin ở phía dưới";
}
<div class="card">
    <div class="form-horizontal">
        <div>
            <div class="pull-left">
                <p class="card-title-heading" id="pageTitle">Chỉnh Sửa Phiếu Nhập Kho</p>
            </div>
            <div class="pull-right">
                <button class="btn btn-sm btn-success btn-xs btn-push" id="large-button" onclick="location.href='@Url.Action("Index")'">
                    <i class="fas fa-backward"></i>
                    <span style="margin: 15px 0 !important;">Trở lại</span>
                </button>
            </div>
            <div class="clearfix"></div>
        </div>
        <hr />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SoPhieuNhapKho)

            <div class="grid-container">
                <div class="grid-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayNhapKho, htmlAttributes: new { @class = "control-label custom-label required" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.EditorFor(model => model.NgayNhapKho, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayNhapKho, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.NgayChinhSua, htmlAttributes: new { @class = "control-label custom-label required" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.EditorFor(model => model.NgayChinhSua, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgayChinhSua, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="grid-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MaNguoiDung, "Người Lập", htmlAttributes: new { @class = "control-label custom-label required" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.DropDownList("MaNguoiDung", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaNguoiDung, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MaNhaCungCap, "Nhà Cung Cấp", htmlAttributes: new { @class = "control-label custom-label required" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.DropDownList("MaNhaCungCap", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MaNhaCungCap, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="grid-item">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Ghichu, htmlAttributes: new { @class = "control-label custom-label" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.EditorFor(model => model.Ghichu, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Ghichu, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TongTien, htmlAttributes: new { @class = "control-label custom-label required" })
                        <div class="col-md-10 custom-input custom-input">
                            @Html.EditorFor(model => model.TongTien, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TongTien, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            <hr/>
            <div class="form-group">
                <div class="col-md-offset-1 col-md-10 custom-input custom-input">
                    <input type="submit" value="Lưu Chỉnh Sửa" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
